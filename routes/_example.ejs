module.exports = {
	
	// обработка GET-запроса
	get:(req, res, next, data) => {
		
		Log.view('Обработка GET-запроса контроллером ' + '<%=name%>'.grey);
				
		res.render('<%=name%>', data);
				
		Log.view('---> ---> --->'.green + ' Обработка запроса завершена');
		Log.delim();
			
	},
	
	// обработка POST-запроса
	post : (req, res, next, data) => {
		
		Log.view('Обработка POST-запроса контроллером ' + 'consult'.grey);
		
		switch (data.ctrl) {
			case 'action_sample' :
				
				Log.view('Обработка тестового запроса');
				
				res.send(JSON.stringify({status : 'ok', message : 'test'}));
				
			break;
			default :
				res.sendStatus(404);
			break;
			
		}

		Log.view('---> ---> --->'.green + ' Обработка запроса завершена');
		Log.delim();
		
	},

	// обработка WebSocket-запроса
	ws : (ws, data) => {
		
		Log.view('Обработка WebSocket-запроса контроллером ' + 'consult'.grey);
		
		Log.view('---> ---> --->'.green + ' Обработка запроса завершена');
		Log.delim();
		
	}
};